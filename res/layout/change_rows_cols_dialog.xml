<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:gravity="center">
	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">
		<LinearLayout
			android:orientation="vertical"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/change_rows_cols_dialog_rows"
				android:textColor="@color/white" />
			<com.doomonafireball.bemusicment.NumberPicker
				android:id="@+id/NPRows"
				android:orientation="vertical"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
		</LinearLayout>
		<LinearLayout
			android:orientation="vertical"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="60dp"
			android:gravity="center">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/change_rows_cols_dialog_columns"
				android:textColor="@color/white" />
			<com.doomonafireball.bemusicment.NumberPicker
				android:id="@+id/NPCols"
				android:orientation="vertical"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />
		</LinearLayout>
	</LinearLayout>
	<View
		android:layout_width="fill_parent"
		android:layout_height="1dp"
		android:background="@color/white"
		android:layout_marginTop="5dp" />
	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="5dp">
		<Button
			android:id="@+id/BTNSet"
			android:layout_width="120dp"
			android:layout_height="wrap_content"
			android:text="@string/change_rows_cols_dialog_set" />
		<Button
			android:id="@+id/BTNCancel"
			android:layout_width="120dp"
			android:layout_height="wrap_content"
			android:text="@string/change_rows_cols_dialog_cancel" />
	</LinearLayout>
</LinearLayout>