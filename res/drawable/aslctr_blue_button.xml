<?xml version="1.0" encoding="utf-8"?>
<selector
	xmlns:android="http://schemas.android.com/apk/res/android">
	<item
		android:state_pressed="true">
		<shape
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:shape="rectangle">
			<corners
				android:radius="10dp" />
			<padding
				android:top="5dip"
				android:bottom="5dp" />
			<gradient
				android:type="linear"
				android:angle="270"
				android:startColor="@color/button_blue_pressed_top"
				android:endColor="@color/button_blue_pressed_bottom" />
			<stroke
				android:width="1dp"
				android:color="@color/button_blue_outline" />
		</shape>
	</item>
	<item
		android:state_focused="true">
		<shape
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:shape="rectangle">
			<corners
				android:radius="10dp" />
			<padding
				android:top="5dp"
				android:bottom="5dp" />
			<gradient
				android:type="linear"
				android:angle="270"
				android:startColor="@color/button_blue_pressed_top"
				android:endColor="@color/button_blue_pressed_bottom" />
			<stroke
				android:width="1dp"
				android:color="@color/button_blue_outline" />
		</shape>
	</item>
	<item>
		<shape
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:shape="rectangle">
			<corners
				android:radius="10dp" />
			<padding
				android:top="5dp"
				android:bottom="5dp" />
			<gradient
				android:type="linear"
				android:angle="270"
				android:startColor="@color/button_blue_default_top"
				android:endColor="@color/button_blue_default_bottom" />
			<stroke
				android:width="1dp"
				android:color="@color/button_blue_outline" />
		</shape>
	</item>
</selector>